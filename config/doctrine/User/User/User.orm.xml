<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Udemy\User\User\Domain\User" table="&quot;user&quot;">
        <id name="id" type="user_id" column="id" length="26">
            <generator strategy="NONE"/>
        </id>

        <embedded name="email" class="Udemy\User\User\Domain\UserEmail" use-column-prefix="false"/>
        <embedded name="password" class="Udemy\User\User\Domain\UserPasswordHash" use-column-prefix="false"/>
        <embedded name="name" class="Udemy\User\User\Domain\UserName" use-column-prefix="false"/>
        <embedded name="avatarUrl" class="Udemy\User\User\Domain\UserAvatarUrl" nullable="true" use-column-prefix="false"/>
        <embedded name="status" class="Udemy\User\User\Domain\UserStatus" use-column-prefix="false"/>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at"/>

        <unique-constraints>
            <unique-constraint name="UNIQ_8D93D649E7927C74" columns="email"/>
        </unique-constraints>

        <many-to-many field="roles" target-entity="Udemy\User\Role\Domain\Role" inversed-by="users">
            <join-table name="&quot;user_role&quot;">
                <join-columns>
                    <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="role_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>

</doctrine-mapping>

