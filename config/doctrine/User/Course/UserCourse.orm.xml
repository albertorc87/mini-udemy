<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Udemy\User\Course\Domain\UserCourse" table="user_course">
        <id name="id" type="user_course_id">
            <generator strategy="NONE"/>
        </id>

        <many-to-one field="user" target-entity="Udemy\User\User\Domain\User">
            <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one field="course" target-entity="Udemy\Course\Course\Domain\Course">
            <join-column name="course_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <field name="purchasedAt" type="datetime_immutable" column="purchased_at"/>

        <unique-constraints>
            <unique-constraint name="UNIQ_73A74900A76ED395591CC992" columns="user_id,course_id"/>
        </unique-constraints>
    </entity>

</doctrine-mapping>

