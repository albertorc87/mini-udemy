<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Udemy\Order\Item\Domain\OrderItem" table="order_item">
        <id name="id" type="order_item_id">
            <generator strategy="NONE"/>
        </id>

        <many-to-one field="order" target-entity="Udemy\Order\Order\Domain\Order">
            <join-column name="order_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one field="course" target-entity="Udemy\Course\Course\Domain\Course">
            <join-column name="course_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <embedded name="price" class="Udemy\Order\Item\Domain\OrderItemPrice" use-column-prefix="false"/>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
    </entity>

</doctrine-mapping>

